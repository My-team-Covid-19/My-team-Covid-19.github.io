{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "linebreak-style": ["warn", "windows"],
        "no-unused-vars": "warn",
        "max-len": ["warn", 100, 2, { "ignoreUrls": true }],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-alert": "warn"
    }
}